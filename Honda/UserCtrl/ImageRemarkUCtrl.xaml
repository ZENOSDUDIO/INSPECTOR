<UserControl x:Class="Honda.UserCtrl.ImageRemarkUCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" Width="177" Height="138">
    <Grid>
        <Image x:Name="image" Margin="0" Stretch="Fill" />
        <Grid x:Name="gdClose" Background="#FFFFFFFF" HorizontalAlignment="Right" VerticalAlignment="Top" Width="18"
              MouseUp="RemovePictrue_MouseUp" Margin="0,3,3,0" Visibility="Collapsed">
            <TextBlock x:Name="tbkClose" Margin="0,3,3,0" TextWrapping="Wrap" Text="X" VerticalAlignment="Center"
                       Visibility="Visible" HorizontalAlignment="Center" />
        </Grid>
    </Grid>
</UserControl>