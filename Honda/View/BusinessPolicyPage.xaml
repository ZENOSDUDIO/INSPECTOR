                                                    Height="65" Margin="0,0,100,0" BorderThickness="0"
                                                    Foreground="White"
                                                    Background="{DynamicResource ButtonBackgroundNormalBlueBrush}"
                                                    Command="{Binding UploadDataCommand}" />
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Grid>
